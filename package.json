{
  "name": "align-text-line",
  "version": "0.0.7",
  "description": "Typescript library for aligning texts on one line. Very useful for menus in bots and small fiscal printers.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint src --max-warnings=0",
    "build": "tsc --declaration",
    "dev": "nodemon --watch \"src//\" --exec \"ts-node src/index.ts\" -e ts"
  },
  "keywords": [
    "typescript",
    "align",
    "text"
  ],
  "author": "Milton Carlos Katoo <mckatoo@gmail.com>",
  "repository": {
    "url": "https://github.com/mckatoo/align-text-line.git",
    "type": "github"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/faker": "^5.1.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.25.0",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.4.0",
    "faker": "^5.1.0",
    "husky": "^7.0.1",
    "jest": "^26.1.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.3",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "cross-env CI=true npx jest --bail --findRelatedTests"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
